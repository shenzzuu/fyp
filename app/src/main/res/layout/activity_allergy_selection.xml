<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_circle_gray"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/gray"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_circle_green"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Any Allergies?"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/progressContainer"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Select all that apply. We'll filter meals for your safety."
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupAllergies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:chipSpacing="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipGluten"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gluten/Wheat"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDairy"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dairy"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEggs"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eggs"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTreeNuts"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tree Nuts"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPeanuts"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peanuts"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipShellfish"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shellfish"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFish"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fish"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSoy"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soy"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSesame"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sesame"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMustard"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mustard"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMsg"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSG"
            android:textColor="@color/chip_text_state_list"
            app:chipBackgroundColor="@color/chip_bg_state_list"
            app:chipStrokeColor="@color/icon_action"
            app:chipStrokeWidth="1dp"/>

    </com.google.android.material.chip.ChipGroup>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/surface_variant"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/chipGroupAllergies"/>

    <LinearLayout
        android:id="@+id/btnNoAllergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_pill_green"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <ImageView
            android:id="@+id/iconCheck"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/check"
            app:tint="@color/white"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvNoAllergies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Allergies"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Finish Setup"
        android:backgroundTint="@color/icon_action"
        android:textColor="@color/surface_color"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>