<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_header_bg">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_custom_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDateSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/surface_variant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/btnPrevDay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/left"
                app:tint="@color/text_primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/dateInfoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnNextDay"
                app:layout_constraintStart_toEndOf="@id/btnPrevDay"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvDateDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon, Nov 24"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/icon_action">
                    <TextView
                        android:id="@+id/tvTodayBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="TODAY"
                        android:textColor="@color/surface_color"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <ImageView
                android:id="@+id/btnNextDay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/right"
                app:tint="@color/text_primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_white_rounded_top"
        android:backgroundTint="@color/bg"
        android:orientation="vertical"
        android:paddingTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDateSelector">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/surface_variant">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tagBreakfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_tag"
                            android:backgroundTint="@color/icon_action"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Breakfast"
                            android:textColor="@color/surface_color"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgContainerBreakfast"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tagBreakfast">

                            <ImageView
                                android:id="@+id/ivBreakfastImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/breakfast" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@id/imgContainerBreakfast"
                            app:layout_constraintEnd_toStartOf="@+id/ivAddBreakfast"
                            app:layout_constraintStart_toEndOf="@id/imgContainerBreakfast"
                            app:layout_constraintTop_toTopOf="@id/imgContainerBreakfast">

                            <TextView
                                android:id="@+id/tvBreakfastName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Breakfast"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvBreakfastTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- : --"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivAddBreakfast"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/plus"
                            app:tint="@color/icon_action"
                            app:layout_constraintBottom_toBottomOf="@id/imgContainerBreakfast"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgContainerBreakfast" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/surface_variant">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tagLunch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_tag"
                            android:backgroundTint="@color/icon_action"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Lunch"
                            android:textColor="@color/surface_color"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgContainerLunch"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tagLunch">

                            <ImageView
                                android:id="@+id/ivLunchImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/lunch" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@id/imgContainerLunch"
                            app:layout_constraintEnd_toStartOf="@+id/ivAddLunch"
                            app:layout_constraintStart_toEndOf="@id/imgContainerLunch"
                            app:layout_constraintTop_toTopOf="@id/imgContainerLunch">

                            <TextView
                                android:id="@+id/tvLunchName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Lunch"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvLunchTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- : --"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivAddLunch"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/plus"
                            app:tint="@color/icon_action"
                            app:layout_constraintBottom_toBottomOf="@id/imgContainerLunch"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgContainerLunch" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/surface_variant">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tagDinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_tag"
                            android:backgroundTint="@color/icon_action"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Dinner"
                            android:textColor="@color/surface_variant"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgContainerDinner"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tagDinner">

                            <ImageView
                                android:id="@+id/ivDinnerImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dinner" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@id/imgContainerDinner"
                            app:layout_constraintEnd_toStartOf="@+id/ivAddDinner"
                            app:layout_constraintStart_toEndOf="@id/imgContainerDinner"
                            app:layout_constraintTop_toTopOf="@id/imgContainerDinner">

                            <TextView
                                android:id="@+id/tvDinnerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Dinner"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDinnerTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- : --"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivAddDinner"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/plus"
                            app:tint="@color/icon_action"
                            app:layout_constraintBottom_toBottomOf="@id/imgContainerDinner"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgContainerDinner" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSupper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/surface_variant">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tagSupper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rounded_tag"
                            android:backgroundTint="@color/icon_action"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Supper"
                            android:textColor="@color/surface_color"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/imgContainerSupper"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tagSupper">

                            <ImageView
                                android:id="@+id/ivSupperImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/supper" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@id/imgContainerSupper"
                            app:layout_constraintEnd_toStartOf="@+id/ivAddSupper"
                            app:layout_constraintStart_toEndOf="@id/imgContainerSupper"
                            app:layout_constraintTop_toTopOf="@id/imgContainerSupper">

                            <TextView
                                android:id="@+id/tvSupperName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Supper"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSupperTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- : --"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivAddSupper"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/plus"
                            app:tint="@color/icon_action"
                            app:layout_constraintBottom_toBottomOf="@id/imgContainerSupper"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgContainerSupper" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        app:elevation="0dp"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>